<Window
	x:Name="Window"
	Title="Plugin Manager"
	Width="1420"
	x:Class="PluginManager.View.AppOverview.AppOverview"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	d:DataContext="{d:DesignInstance Type=appOverview:AppOverviewViewModel}"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:PluginManager.View.AppOverview"
	xmlns:converters="clr-namespace:Whathecode.System.Windows.Data;assembly=Whathecode.PresentationFramework"
	xmlns:appOverview="clr-namespace:PluginManager.ViewModel.AppOverview"
	xmlns:pluginOverview="clr-namespace:PluginManager.View.PluginOverview"
	MinWidth="940"
	MinHeight="600">
	<DockPanel LastChildFill="True">

		<ScrollViewer BorderThickness="0" VerticalScrollBarVisibility="Auto" DockPanel.Dock="Right">

			<DockPanel>

				<StackPanel
					DockPanel.Dock="Top"
					Margin="10, 10, 10, 10"
					Name="Plugins">

					<StackPanel.Resources>
						<Style TargetType="StackPanel">
							<Setter Property="Margin" Value="0,0,0,10" />
						</Style>
						<Style TargetType="Image">
							<Setter Property="Width" Value="20" />
							<Setter Property="Height" Value="20" />
							<Setter Property="Margin" Value="7,0,0,0" />
							<Setter Property="VerticalAlignment" Value="Center" />
						</Style>
						<Style TargetType="TextBlock">
							<Setter Property="VerticalAlignment" Value="Center" />
						</Style>
					</StackPanel.Resources>

					<pluginOverview:PluginOverview
						DataContext="{Binding CurrentPlugins}" />

				</StackPanel>

				<StackPanel
					Orientation="Horizontal"
					VerticalAlignment="Bottom"
					DockPanel.Dock="Bottom"
					Margin="10, 10, 10, 10"
					HorizontalAlignment="Right">

					<StackPanel VerticalAlignment="Center" Margin="0, 0, 5, 0">
						<StackPanel.Resources>
							<Style TargetType="TextBlock">
								<Setter Property="Margin" Value="0,0,0,2" />
							</Style>
						</StackPanel.Resources>

						<TextBlock Text="Virtual desktop configuration" />
						<TextBlock Text="Persistence configuration" />
						<TextBlock Text="Interruption configuration" />
					</StackPanel>

					<StackPanel>
						<StackPanel.Resources>
							<Style TargetType="local:PluginIcon">
								<Setter Property="IconBackground" Value="DeepSkyBlue" />
							</Style>
						</StackPanel.Resources>

						<local:PluginIcon IconText="V" />
						<local:PluginIcon IconText="P" />
						<local:PluginIcon IconText="I" />
					</StackPanel>

				</StackPanel>

			</DockPanel>
		</ScrollViewer>

		<StackPanel>
			<ComboBox
				ItemsSource="{Binding Filters}"
				Width="200"
				HorizontalAlignment="Left"
				SelectedIndex="0"
				SelectedItem="{Binding SelectedFilter}" />

			<ListView
				ItemsSource="{Binding ApplicationPlugins.Keys}"
				Name="AppsListView"
				BorderThickness="0"
				Padding="5"
				DockPanel.Dock="Left"
				SelectedItem="{Binding SelectedApplication}">

				<ListView.Resources>
					<Style TargetType="TextBlock">
						<Setter Property="Margin" Value="10,0,0,0" />
						<Setter Property="VerticalAlignment" Value="Center" />
					</Style>
					<Style TargetType="StackPanel">
						<Setter Property="VerticalAlignment" Value="Center" />
					</Style>
					<Style TargetType="DockPanel">
						<Setter Property="MinHeight" Value="55" />
						<Setter Property="MinWidth" Value="300" />
						<Setter Property="LastChildFill" Value="False" />
					</Style>
				</ListView.Resources>

				<ListView.ItemsPanel>
					<ItemsPanelTemplate>
						<WrapPanel
							Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}" />
					</ItemsPanelTemplate>
				</ListView.ItemsPanel>

				<ListView.ItemContainerStyle>
					<Style TargetType="ListBoxItem">
						<Setter Property="HorizontalContentAlignment" Value="Stretch" />
						<Setter Property="BorderThickness" Value="1" />
						<Setter Property="BorderBrush" Value="Black" />
						<Setter Property="Margin" Value="1" />
					</Style>
				</ListView.ItemContainerStyle>

				<ListView.ItemTemplate>
					<DataTemplate>
						<DockPanel
							MinWidth="400"
							MaxWidth="400"
							MinHeight="60">

							<Image
								Width="40"
								Height="40"
								Source="{Binding Icon}"
								Margin="5" />

							<Grid Margin="5">

								<StackPanel
									VerticalAlignment="Center"
									HorizontalAlignment="Left">
									<TextBlock
										Text="{Binding Name}"
										HorizontalAlignment="Left"
										VerticalAlignment="Center"
										FontWeight="Bold"
										TextWrapping="Wrap"
										FontSize="14"
										MaxWidth="300" />
									<TextBlock
										Text="{Binding Author}"
										FontSize="12"
										VerticalAlignment="Bottom" />
								</StackPanel>

								<StackPanel
									Orientation="Horizontal"
									VerticalAlignment="Bottom"
									HorizontalAlignment="Right">

									<StackPanel.Resources>
										<Style TargetType="local:PluginIcon">
											<Setter Property="IconBackground" Value="DeepSkyBlue" />
										</Style>
									</StackPanel.Resources>

									<local:PluginIcon
										Visibility="{Binding AnyVdm,
										Converter={converters:FromBooleanConverter IfTrue={x:Static Visibility.Visible}, IfFalse={x:Static Visibility.Collapsed}}}"
										IconText="V"/>

									<local:PluginIcon
										Visibility="{Binding AnyPersistence,
										Converter={converters:FromBooleanConverter IfTrue={x:Static Visibility.Visible}, IfFalse={x:Static Visibility.Collapsed}}}"
										IconText="P"/>

									<local:PluginIcon
										Visibility="{Binding AnyInterruption,
										Converter={converters:FromBooleanConverter IfTrue={x:Static Visibility.Visible}, IfFalse={x:Static Visibility.Collapsed}}}"
										IconText="I"/>
									
								</StackPanel>
							</Grid>


							<!--TODO: Buttons that will be used to control plug-ins.-->
